<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<div class="extended-banner">
  <%= link_to "For Parents", "#", class: "button", id: "for-parents-link" %>
  <span class="hide dark-blue" id="guard-logged-in">
    <%= current_guardian.email %> logged in</span>
  <% unless current_user.profile%>
    <div id="modal-back">
    </div>
    <div class="show" id="modal">
      <div id="profile-wrapper">
        <div class="row">
          <div class="hide-for-small medium-12
            medium-centered large-8 large-centered columns">
              <%= image_tag "big-globe.png", id: "modal-globe" %>
          </div>
        </div>
        <div id="profileBox">
          <div class="row">
            <div class="small-8 small-centered medium-6
              medium-centered large-4 large-centered columns">
              <%= render partial: "/profiles/form" %>
              <%= link_to "I'll do this Later",
                "#",
                id: "close-modal",
                class: "button tiny secondary"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%end%>
  <div class="row">
    <div class="small-12 large-12 columns">
      <h1 class="lobster dark-blue">Dashboard</h1>
    </div>
  </div>
  <div class="row">
    <div class="small-12 large-centered large-12 columns">
      <div id="map-wrapper">
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>
<script>
  <%= render "map"%>
</script>
